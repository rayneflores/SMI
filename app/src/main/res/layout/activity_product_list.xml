<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.ProductListActivity">

    <TextView
        android:id="@+id/tvProductListTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/productos"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:textAlignment="center"
        android:textColor="@color/purple_200"
        android:textSize="@dimen/fontLarge"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/llRvProducts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvProductListTitle"
        android:orientation="horizontal">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvProducts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rlModules"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/llRvProducts"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="310dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/title_border">

        <TextView
            android:id="@+id/tvModuleTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:text="Modulos de Envio"
            android:textAlignment="center"
            android:textSize="@dimen/fontLarge"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/llCheck1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvModuleTitle"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/cbConteo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="Conteo" />

            <CheckBox
                android:id="@+id/cbEtiquetas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="Etiqueta" />

            <CheckBox
                android:id="@+id/cbSeguimiento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="Seguimiento" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llCheck2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/llCheck1"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/cbPedido"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="Pedido" />

            <CheckBox
                android:id="@+id/cbVencimiento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="Vencimiento" />
        </LinearLayout>

        <Button
            android:id="@+id/btnEnviar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="8dp"
            android:text="Enviar Datos"
            android:textColor="@color/black" />

    </RelativeLayout>

</RelativeLayout>