<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="#fff"
    app:cardCornerRadius="3dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true"
    app:contentPadding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/title_border"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvListProductId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Id del Producto:"
            android:textSize="@dimen/fontMini" />
        <TextView
            android:id="@+id/tvListProductBarCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Codigo de Barras:"
            android:textSize="@dimen/fontMini" />
        <TextView
            android:id="@+id/tvListProductDetalle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Detalle:"
            android:textSize="@dimen/fontMini" />
        <TextView
            android:id="@+id/tvListProductPventa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Precio de Venta:"
            android:textSize="@dimen/fontMini" />
        <TextView
            android:id="@+id/tvListProductpOferta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp"
            android:text="Precio Oferta: "
            android:textSize="@dimen/fontMini" />
    </LinearLayout>
</androidx.cardview.widget.CardView>