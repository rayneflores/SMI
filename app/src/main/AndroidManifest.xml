<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ryfsystems.smi">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SMI"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".activities.ProductSelectionActivity"
            android:exported="false" />
        <activity
            android:name=".activities.BusquedaManualActivity"
            android:exported="false" />
        <activity
            android:name=".activities.VencimientoActivity"
            android:exported="true" />
        <activity
            android:name=".activities.ProductDetailActivity"
            android:exported="true" />
        <activity
            android:name=".activities.ProductListActivity"
            android:exported="true" />
        <activity
            android:name=".activities.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.ConteoActivity"
            android:exported="true" />
        <activity
            android:name=".activities.TomaInventarioActivity"
            android:exported="true" />
        <activity
            android:name=".activities.UsersListActivity"
            android:exported="true" />
        <activity
            android:name=".activities.UserActivity"
            android:exported="true" />
        <activity
            android:name=".activities.LoginActivity"
            android:exported="true" />
        <activity
            android:name=".activities.MainActivity"
            android:exported="true" />
        <activity
            android:name=".activities.NewProductSelectionActivity"
            android:exported="true" />
        <activity
            android:name=".activities.NewProductListActivity"
            android:exported="true" />
    </application>

</manifest>